<?xml version="1.0"?>
<ruleset name="WP">
  <description>WordPress coding standards</description>

  <!-- Scan these files -->
  <file>*.php</file>
  <file>classes</file>
  <file>tests</file>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="s"/>

  
  <rule ref="WordPress"/>
  <rule ref="WordPress-Extra"/>
  <rule ref="WordPress-Docs"/>
</ruleset>